<style>
  .announcement-bar {
    background: var(--color-primary);
    color: white;
    padding: 12px 0;
    text-align: center;
    font-size: 14px;
    font-weight: 500;
    border-bottom: 1px solid rgba(255,255,255,0.2);
    position: relative;
    z-index: 101;
  }
  
  .announcement-bar a {
    color: white;
    text-decoration: underline;
    margin-left: 8px;
    transition: opacity 0.3s;
  }
  
  .announcement-bar a:hover {
    opacity: 0.8;
  }

  .header-wrapper {
    background: var(--color-white);
    border-bottom: 1px solid #e5e5e5;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 0;
  }

  .header-logo {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .header-logo img {
    width: 30px;
    height: 30px;
  }

  .header-logo-text h1 {
    font-size: 18px;
    color: var(--color-secondary);
    margin-bottom: 2px;
  }

  .header-logo-text p {
    font-size: 11px;
    color: #888;
  }

  .header-nav {
    display: flex;
    gap: 30px;
    align-items: center;
  }

  .header-nav a {
    font-size: 15px;
    color: var(--color-text);
    transition: color 0.3s;
  }

  .header-nav a:hover,
  .header-nav a.active {
    color: var(--color-primary);
  }

  .header-icons {
    display: flex;
    gap: 20px;
    align-items: center;
  }

  .header-icon {
    cursor: pointer;
    position: relative;
    background: none;
    border: none;
    padding: 0;
  }

  .cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background: var(--color-primary);
    color: white;
    border-radius: 50%;
    width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 11px;
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .header-nav {
      display: none;
    }
    
    .mobile-menu-toggle {
      display: block;
    }
  }

  @media (min-width: 769px) {
    .mobile-menu-toggle {
      display: none;
    }
  }
  
  .search-popup {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }
  
  .search-popup.active {
    opacity: 1;
    visibility: visible;
  }
  
  .search-popup-content {
    width: 100%;
    max-width: 700px;
    padding: 0 20px;
    position: relative;
  }
  
  .search-close {
    position: absolute;
    top: -50px;
    right: 20px;
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    padding: 10px;
    transition: opacity 0.3s;
  }
  
  .search-close:hover {
    opacity: 0.7;
  }
  
  .search-popup-form {
    display: flex;
    gap: 10px;
    background: white;
    padding: 10px;
    border-radius: 8px;
  }
  
  .search-popup-input {
    flex: 1;
    padding: 15px 20px;
    border: none;
    font-size: 18px;
    outline: none;
    background: transparent;
  }
  
  .search-popup-button {
    padding: 15px 35px;
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
    font-size: 16px;
    transition: background 0.3s;
  }
  
  .search-popup-button:hover {
    background: #B89851;
  }
  
  @media (max-width: 768px) {
    .search-popup-input {
      font-size: 16px;
      padding: 12px 15px;
    }
    
    .search-popup-button {
      padding: 12px 25px;
    }
  }
</style> 

<div class="header-wrapper">
  <div class="container">
    <header class="header">
      <a href="/" class="header-logo">
        {% if section.settings.logo %}
          <img src="{{ section.settings.logo | img_url: '60x' }}" alt="{{ shop.name }}" width="50" height="50">
        {% else %}
          <svg width="50" height="50" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="#C9A961" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M2 17L12 22L22 17" stroke="#C9A961" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M2 12L12 17L22 12" stroke="#C9A961" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        {% endif %}
          <div class="header-logo-text">
            <h1>{{ section.settings.store_name | default: 'In My God' }}</h1>
            <p>{{ section.settings.tagline | default: 'From Jerusalem, With Blessings' }}</p>
          </div>
      </a>

      <nav class="header-nav">
        <a href="/" {% if template.name == 'index' %}class="active"{% endif %}>Home</a>
        <a href="/collections/all" {% if template.name == 'collection' or template.name == 'product' %}class="active"{% endif %}>Shop</a>
        <a href="/pages/about" {% if template.name == 'page' and page.handle == 'about' %}class="active"{% endif %}>About</a>
        <a href="/blogs/news" {% if template.name == 'blog' or template.name == 'article' %}class="active"{% endif %}>Blog</a>
      </nav>

      <div class="header-icons">
        <div class="header-icon mobile-menu-toggle">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <line x1="3" y1="12" x2="21" y2="12" stroke-width="2"/>
            <line x1="3" y1="6" x2="21" y2="6" stroke-width="2"/>
            <line x1="3" y1="18" x2="21" y2="18" stroke-width="2"/>
          </svg>
        </div>
        
        <button class="header-icon" onclick="toggleSearch()" aria-label="Search">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"/>
            <path d="M21 21l-4.35-4.35"/>
          </svg>
        </button>
        
        <a href="/cart" class="header-icon">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="9" cy="21" r="1"/>
            <circle cx="20" cy="21" r="1"/>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
          </svg>
          <span class="cart-count" id="cart-icon-bubble">{{ cart.item_count }}</span>
        </a>
      </div>
    </header>
  </div>
  
  <!-- Search Popup -->
  <div class="search-popup" id="searchPopup">
    <div class="search-popup-content">
      <button class="search-close" onclick="toggleSearch()" aria-label="Close search">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
      <form action="/search" method="get" class="search-popup-form">
        <input type="search" 
               name="q" 
               placeholder="Search for sacred treasures..." 
               autocomplete="off"
               class="search-popup-input">
        <button type="submit" class="search-popup-button">Search</button>
      </form>
    </div>
  </div>
</div>

<script>
  function toggleSearch() {
    const popup = document.getElementById('searchPopup');
    popup.classList.toggle('active');
    
    if (popup.classList.contains('active')) {
      const input = popup.querySelector('input');
      setTimeout(() => input.focus(), 100);
    }
  }
  
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      const popup = document.getElementById('searchPopup');
      if (popup.classList.contains('active')) {
        toggleSearch();
      }
    }
  });
  
  document.getElementById('searchPopup')?.addEventListener('click', function(e) {
    if (e.target === this) {
      toggleSearch();
    }
  });
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "store_name",
      "label": "Store Name",
      "default": "In My God"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "From Jerusalem, With Blessings"
    }
  ]
}
{% endschema %}