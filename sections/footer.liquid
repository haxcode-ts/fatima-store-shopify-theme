<style>
  .blessing-banner {
    background: var(--color-primary);
    color: var(--color-white);
    text-align: center;
    padding: 30px 20px;
  }

  .blessing-banner h3 {
    font-size: 12px;
    font-weight: normal;
    margin-bottom: 8px;
    opacity: 0.9;
  }

  .blessing-banner p {
    font-size: 20px;
    font-style: italic;
    font-family: var(--font-heading-family);
  }

  .footer {
    background: var(--color-secondary);
    color: var(--color-white);
    padding: 60px 0 30px;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    margin-bottom: 40px;
  }

  .footer-column h4 {
    font-size: 18px;
    margin-bottom: 20px;
    color: var(--color-primary);
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 20px;
  }

  .footer-logo img {
    width: 30px;
    height: 30px;
  }

  .footer-logo-text h3 {
    font-size: 18px;
    margin-bottom: 2px;
  }

  .footer-logo-text p {
    font-size: 11px;
    opacity: 0.8;
  }

  .footer-description {
    font-size: 14px;
    line-height: 1.6;
    opacity: 0.9;
  }

  .footer-links {
    list-style: none;
  }

  .footer-links li {
    margin-bottom: 12px;
  }

  .footer-links a {
    font-size: 14px;
    opacity: 0.9;
    transition: opacity 0.3s;
  }

  .footer-links a:hover {
    opacity: 1;
    color: var(--color-primary);
  }

  .footer-social {
    display: flex;
    gap: 15px;
    margin-top: 15px;
  }

  .footer-social a {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(201, 169, 97, 0.2);
    border-radius: 4px;
    transition: all 0.3s;
  }

  .footer-social a:hover {
    background: var(--color-primary);
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 13px;
    opacity: 0.8;
  }

  .footer-tags {
    display: flex;
    gap: 15px;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 15px;
      text-align: center;
    }
  }
</style>

<div class="blessing-banner">
  <div class="container">
    <h3>{{ section.settings.blessing_label | default: 'Blessing of the Day' }}</h3>
    <p>"{{ section.settings.blessing_text | default: 'May the Lord bless you and keep you.' }}"</p>
  </div>
</div>

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-column">
        <div class="footer-logo">
          {% if section.settings.logo %}
            <img src="{{ section.settings.logo | img_url: '60x' }}" alt="{{ shop.name }}">
          {% else %}
            <svg width="30" height="30" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="#C9A961" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M2 17L12 22L22 17" stroke="#C9A961" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M2 12L12 17L22 12" stroke="#C9A961" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <div class="footer-logo-text">
              <h3>{{ section.settings.store_name | default: 'In My God' }}</h3>
              <p>{{ section.settings.tagline | default: 'From Jerusalem, With Blessings' }}</p>
            </div>
          {% endif %}
        </div>
        <p class="footer-description">
          {{ section.settings.description | default: 'Authentic Holy Land gifts handcrafted by Christian artisans in Jerusalem.' }}
        </p>
      </div>

      <div class="footer-column">
        <h4>About</h4>
        <ul class="footer-links">
          <li><a href="/pages/our-story">Our Story</a></li>
          <li><a href="/pages/our-artisans">Our Artisans</a></li>
          <li><a href="/pages/authenticity">Authenticity Promise</a></li>
          <li><a href="/pages/shipping">Shipping & Returns</a></li>
