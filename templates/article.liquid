{% comment %}
  Article/Blog Post Template
  Save as: templates/article.liquid
{% endcomment %}

<style>
  .article-hero {
    background: var(--color-bg-light);
    padding: 80px 0 60px;
  }
  
  .article-header {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }
  
  .article-category {
    display: inline-block;
    background: var(--color-primary);
    color: white;
    padding: 5px 15px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: bold;
    margin-bottom: 20px;
    text-transform: uppercase;
  }
  
  .article-title {
    font-size: 48px;
    margin-bottom: 20px;
    color: var(--color-secondary);
    line-height: 1.2;
  }
  
  .article-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    font-size: 14px;
    color: #888;
  }
  
  .article-meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .article-featured-image {
    max-width: 1200px;
    margin: 0 auto;
    border-radius: 12px;
    overflow: hidden;
    margin-top: 40px;
  }
  
  .article-featured-image img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .article-content-wrapper {
    padding: 80px 0;
    background: white;
  }
  
  .article-layout {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 60px;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .article-content {
    max-width: 800px;
  }
  
  .article-content h2 {
    font-size: 32px;
    margin: 40px 0 20px;
    color: var(--color-secondary);
  }
  
  .article-content h3 {
    font-size: 24px;
    margin: 30px 0 15px;
    color: var(--color-secondary);
  }
  
  .article-content p {
    font-size: 18px;
    line-height: 1.9;
    color: #666;
    margin-bottom: 25px;
  }
  
  .article-content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 30px 0;
  }
  
  .article-content blockquote {
    background: var(--color-bg-light);
    padding: 30px;
    border-left: 4px solid var(--color-primary);
    margin: 30px 0;
    font-style: italic;
    font-size: 20px;
    color: var(--color-secondary);
  }
  
  .article-content ul,
  .article-content ol {
    margin: 25px 0;
    padding-left: 30px;
  }
  
  .article-content li {
    font-size: 18px;
    line-height: 1.9;
    color: #666;
    margin-bottom: 12px;
  }
  
  .article-tags {
    margin-top: 50px;
    padding-top: 30px;
    border-top: 1px solid #e5e5e5;
  }
  
  .article-tags h4 {
    font-size: 14px;
    margin-bottom: 15px;
    color: var(--color-secondary);
    text-transform: uppercase;
  }
  
  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }
  
  .tag-item {
    padding: 8px 16px;
    background: var(--color-bg-light);
    color: var(--color-secondary);
    border-radius: 20px;
    font-size: 14px;
    transition: all 0.3s;
  }
  
  .tag-item:hover {
    background: var(--color-primary);
    color: white;
  }
  
  .article-share {
    margin-top: 40px;
    padding-top: 30px;
    border-top: 1px solid #e5e5e5;
  }
  
  .article-share h4 {
    font-size: 14px;
    margin-bottom: 15px;
    color: var(--color-secondary);
    text-transform: uppercase;
  }
  
  .share-buttons {
    display: flex;
    gap: 10px;
  }
  
  .share-button {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-light);
    border-radius: 50%;
    color: var(--color-secondary);
    transition: all 0.3s;
  }
  
  .share-button:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }
  
  .article-sidebar {
    position: sticky;
    top: 120px;
    height: fit-content;
  }
  
  .sidebar-section {
    background: var(--color-bg-light);
    padding: 30px;
    border-radius: 8px;
    margin-bottom: 30px;
  }
  
  .sidebar-title {
    font-size: 20px;
    margin-bottom: 20px;
    color: var(--color-secondary);
  }
  
  .sidebar-author {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 15px;
  }
  
  .author-avatar {
    width: 60px;
    height: 60px;
    background: var(--color-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 24px;
    font-weight: bold;
  }
  
  .author-name {
    font-weight: bold;
    color: var(--color-secondary);
  }
  
  .related-posts-list {
    list-style: none;
  }
  
  .related-post-item {
    margin-bottom: 20px;
    padding-bottom: 20px;
    border-bottom: 1px solid #ddd;
  }
  
  .related-post-item:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }
  
  .related-post-title {
    font-size: 16px;
    margin-bottom: 8px;
    color: var(--color-secondary);
    display: block;
    transition: color 0.3s;
  }
  
  .related-post-title:hover {
    color: var(--color-primary);
  }
  
  .related-post-date {
    font-size: 13px;
    color: #888;
  }
  
  @media (max-width: 968px) {
    .article-layout {
      grid-template-columns: 1fr;
    }
    
    .article-sidebar {
      position: static;
    }
    
    .article-title {
      font-size: 32px;
    }
    
    .article-content h2 {
      font-size: 26px;
    }
    
    .article-content p {
      font-size: 16px;
    }
  }
</style>

<div class="article-hero">
  <div class="container">
    <div class="article-header">
      {% if article.tags.size > 0 %}
        <span class="article-category">{{ article.tags.first }}</span>
      {% endif %}
      
      <h1 class="article-title">{{ article.title }}</h1>
      
      <div class="article-meta">
        <div class="article-meta-item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
          </svg>
          {{ article.author }}
        </div>
        <div class="article-meta-item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
            <line x1="16" y1="2" x2="16" y2="6"/>
            <line x1="8" y1="2" x2="8" y2="6"/>
            <line x1="3" y1="10" x2="21" y2="10"/>
          </svg>
          {{ article.published_at | date: "%B %d, %Y" }}
        </div>
      </div>
    </div>
    
    {% if article.image %}
      <div class="article-featured-image">
        <img src="{{ article.image | img_url: '1200x600', crop: 'center' }}" alt="{{ article.title }}">
      </div>
    {% endif %}
  </div>
</div>

<section class="article-content-wrapper">
  <div class="container">
    <div class="article-layout">
      <div class="article-content">
        {{ article.content }}
        
        {% if article.tags.size > 0 %}
          <div class="article-tags">
            <h4>Tags</h4>
            <div class="tags-list">
              {% for tag in article.tags %}
                <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="tag-item">{{ tag }}</a>
              {% endfor %}
            </div>
          </div>
        {% endif %}
        
        <div class="article-share">
          <h4>Share This Article</h4>
          <div class="share-buttons">
            <a href="https://www.facebook.com/sharer.php?u={{ article.url | prepend: shop.url }}" 
               target="_blank" 
               class="share-button"
               aria-label="Share on Facebook">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a href="https://twitter.com/intent/tweet?text={{ article.title | url_encode }}&url={{ article.url | prepend: shop.url }}" 
               target="_blank" 
               class="share-button"
               aria-label="Share on Twitter">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
              </svg>
            </a>
            <a href="mailto:?subject={{ article.title | url_encode }}&body={{ article.url | prepend: shop.url }}" 
               class="share-button"
               aria-label="Share via Email">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
      
      <aside class="article-sidebar">
        <div class="sidebar-section">
          <h3 class="sidebar-title">About the Author</h3>
          <div class="sidebar-author">
            <div class="author-avatar">{{ article.author | first }}</div>
            <div>
              <div class="author-name">{{ article.author }}</div>
            </div>
          </div>
          <p style="font-size: 14px; color: #666; line-height: 1.6; margin: 0;">
            Sharing stories and reflections from the Holy Land.
          </p>
        </div>
        
        {% if blog.articles.size > 1 %}
          <div class="sidebar-section">
            <h3 class="sidebar-title">Related Articles</h3>
            <ul class="related-posts-list">
              {% for related_article in blog.articles limit: 3 %}
                {% unless related_article.id == article.id %}
                  <li class="related-post-item">
                    <a href="{{ related_article.url }}" class="related-post-title">
                      {{ related_article.title }}
                    </a>
                    <div class="related-post-date">
                      {{ related_article.published_at | date: "%B %d, %Y" }}
                    </div>
                  </li>
                {% endunless %}
              {% endfor %}
            </ul>
          </div>
        {% endif %}
        
        <div class="sidebar-section">
          <h3 class="sidebar-title">Back to Blog</h3>
          <a href="{{ blog.url }}" class="btn" style="width: 100%; text-align: center;">
            View All Articles
          </a>
        </div>
      </aside>
    </div>
  </div>
</section>