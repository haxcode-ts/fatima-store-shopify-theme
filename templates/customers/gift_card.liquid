{% comment %}
  Gift Card Template
  Save as: templates/gift_card.liquid
{% endcomment %}

<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ gift_card.title }}</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #FFF9ED;
      padding: 40px 20px;
    }
    .container { max-width: 600px; margin: 0 auto; }
    .gift-card {
      background: white;
      border-radius: 16px;
      padding: 60px 40px;
      text-align: center;
      box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    }
    .logo {
      font-size: 24px;
      color: #4A3F35;
      margin-bottom: 30px;
      font-weight: bold;
    }
    h1 {
      font-size: 32px;
      color: #4A3F35;
      margin-bottom: 20px;
    }
    .amount {
      font-size: 48px;
      color: #C9A961;
      font-weight: bold;
      margin: 30px 0;
    }
    .code-wrapper {
      background: #FFF9ED;
      padding: 20px;
      border-radius: 8px;
      margin: 30px 0;
    }
    .code {
      font-size: 24px;
      font-weight: bold;
      color: #4A3F35;
      letter-spacing: 2px;
      margin-bottom: 10px;
    }
    .expires {
      color: #666;
      font-size: 14px;
      margin-top: 20px;
    }
    .qr-code {
      margin: 30px 0;
    }
    .btn {
      display: inline-block;
      padding: 15px 40px;
      background: #C9A961;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      margin-top: 20px;
      font-weight: bold;
    }
    .btn:hover { background: #B89851; }
    .print-btn {
      margin-top: 20px;
      color: #C9A961;
      cursor: pointer;
      text-decoration: underline;
    }
    @media print {
      body { background: white; padding: 0; }
      .print-btn, .btn { display: none; }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="gift-card">
      <div class="logo">Fatima Store</div>
      <h1>Gift Card</h1>
      <p style="color: #666; font-size: 16px;">From Jerusalem, With Blessings</p>
      
      <div class="amount">{{ gift_card.balance | money }}</div>
      
      <div class="code-wrapper">
        <div style="font-size: 12px; color: #888; margin-bottom: 10px;">GIFT CARD CODE</div>
        <div class="code">{{ gift_card.code | format_code }}</div>
      </div>
      
      {% if gift_card.qr_identifier %}
        <div class="qr-code">
          <img src="{{ gift_card.qr_identifier | qr_code_url }}" alt="QR Code" width="150" height="150">
        </div>
      {% endif %}
      
      {% if gift_card.expires_on %}
        <p class="expires">Expires on {{ gift_card.expires_on | date: "%B %d, %Y" }}</p>
      {% endif %}
      
      <a href="{{ shop.url }}" class="btn">Shop Now</a>
      
      <div class="print-btn" onclick="window.print()">Print Gift Card</div>
      
      <p style="margin-top: 30px; font-size: 14px; color: #888;">
        Use this gift card at {{ shop.name }}<br>
        Questions? Contact us at {{ shop.email }}
      </p>
    </div>
  </div>
</body>
</html>