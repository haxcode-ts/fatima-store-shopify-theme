{% comment %}
  Collection Page Template
  Save as: templates/collection.liquid
{% endcomment %}

<style>
  .collection-header { background: var(--color-bg-light); padding: 60px 0; text-align: center; }
  .collection-header h1 { font-size: 42px; margin-bottom: 15px; color: var(--color-secondary); }
  .collection-header p { font-size: 16px; color: #666; max-width: 700px; margin: 0 auto; }
  
  .collection-main { padding: 60px 0; }
  .collection-container { display: grid; grid-template-columns: 280px 1fr; gap: 40px; }
  .collection-sidebar { position: sticky; top: 120px; height: fit-content; }
  
  .filter-section { margin-bottom: 35px; }
  .filter-title { font-size: 16px; font-weight: bold; margin-bottom: 15px; color: var(--color-secondary); }
  .filter-options { list-style: none; }
  .filter-option { margin-bottom: 12px; }
  .filter-option label { display: flex; align-items: center; cursor: pointer; font-size: 14px; color: #666; transition: color 0.3s; }
  .filter-option label:hover { color: var(--color-primary); }
  .filter-option input[type="checkbox"] { margin-right: 10px; width: 18px; height: 18px; cursor: pointer; }
  .filter-option.active { background: var(--color-bg-light); padding: 8px; border-radius: 4px; }
  
  .filter-quote { background: var(--color-bg-light); padding: 20px; border-radius: 8px; margin-top: 30px; }
  .filter-quote p { font-size: 13px; line-height: 1.6; font-style: italic; color: #666; }
  
  .collection-content { min-width: 0; }
  .collection-toolbar { display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; padding-bottom: 20px; border-bottom: 1px solid #e5e5e5; }
  .products-count { font-size: 14px; color: #666; }
  .sort-select { padding: 10px 15px; border: 1px solid #ddd; border-radius: 4px; font-size: 14px; cursor: pointer; background: white; }
  
  .products-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 30px; }
  .no-products { text-align: center; padding: 60px 20px; }
  .no-products h3 { font-size: 24px; margin-bottom: 15px; color: var(--color-secondary); }
  
  .pagination { display: flex; justify-content: center; align-items: center; gap: 10px; margin-top: 60px; }
  .pagination a, .pagination span { padding: 10px 15px; border: 1px solid #ddd; border-radius: 4px; color: var(--color-text); transition: all 0.3s; }
  .pagination a:hover { background: var(--color-primary); color: white; border-color: var(--color-primary); }
  .pagination .active { background: var(--color-primary); color: white; border-color: var(--color-primary); }
  
  @media (max-width: 968px) {
    .collection-container { grid-template-columns: 1fr; }
    .collection-sidebar { position: static; }
    .filter-section { border-bottom: 1px solid #e5e5e5; padding-bottom: 20px; }
    .products-grid { grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 20px; }
  }
</style>

<div class="collection-header">
  <div class="container">
    <h1>{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <p>{{ collection.description }}</p>
    {% else %}
      <p>Handcrafted by Christian artisans in Jerusalem, each piece embodies faith, tradition, and the sacred beauty of the Holy Land.</p>
    {% endif %}
  </div>
</div>

<section class="collection-main">
  <div class="container">
    <div class="collection-container">
      <aside class="collection-sidebar">
        <div class="filter-section">
          <h3 class="filter-title">Filter by Category</h3>
          <ul class="filter-options">
            <li class="filter-option {% if collection.handle == 'all' %}active{% endif %}">
              <a href="/collections/all">
                <label>All Products</label>
              </a>
            </li>
            <li class="filter-option {% if collection.handle == 'olive-wood' %}active{% endif %}">
              <a href="/collections/olive-wood-creations">
                <label>Olive Wood Creations</label>
              </a>
            </li>
            <li class="filter-option {% if collection.handle == 'rosaries' %}active{% endif %}">
              <a href="/collections/rosaries">
                <label>Rosaries & Prayer Beads</label>
              </a>
            </li>
            <li class="filter-option {% if collection.handle == 'holy-oils' %}active{% endif %}">
              <a href="/collections/holy-oils">
                <label>Holy Oils & Incense</label>
              </a>
            </li>
          </ul>
        </div>

        <div class="filter-section">
          <h3 class="filter-title">Price Range</h3>
          <ul class="filter-options">
            <li class="filter-option">
              <label>
                <input type="checkbox" name="price" value="under-50">
                Under $50
              </label>
            </li>
            <li class="filter-option">
              <label>
                <input type="checkbox" name="price" value="50-100">
                $50 - $100
              </label>
            </li>
            <li class="filter-option">
              <label>
                <input type="checkbox" name="price" value="over-100">
                Over $100
              </label>
            </li>
          </ul>
        </div>

        <div class="filter-quote">
          <p>"Each piece carries the soul of Jerusalem — blessed and handcrafted with devotion."</p>
        </div>
      </aside>

      <div class="collection-content">
        <div class="collection-toolbar">
          <div class="products-count">
            {{ collection.products.size }} products found
          </div>
          <select class="sort-select" onchange="sortProducts(this.value)">
            <option value="manual">Sort by</option>
            <option value="best-selling">Best Selling</option>
            <option value="title-ascending">Alphabetically, A-Z</option>
            <option value="title-descending">Alphabetically, Z-A</option>
            <option value="price-ascending">Price, low to high</option>
            <option value="price-descending">Price, high to low</option>
            <option value="created-descending">Date, new to old</option>
            <option value="created-ascending">Date, old to new</option>
          </select>
        </div>

        {% if collection.products.size > 0 %}
          <div class="products-grid">
            {% for product in collection.products %}
              <a href="{{ product.url }}" class="product-card">
                <div class="product-image-wrapper">
                  {% if product.featured_image %}
                    <img src="{{ product.featured_image | img_url: '500x500' }}" alt="{{ product.title }}" class="product-image">
                  {% endif %}
                  {% if product.tags contains 'blessed' %}
                    <span class="product-badge">Blessed</span>
                  {% endif %}
                </div>
                <div class="product-info">
                  <h3 class="product-title">{{ product.title }}</h3>
                  <p class="product-subtitle">Handcrafted in Jerusalem</p>
                  <p class="product-price">{{ product.price | money }}</p>
                </div>
              </a>
            {% endfor %}
          </div>

          {% if paginate.pages > 1 %}
            <div class="pagination">
              {% if paginate.previous %}
                <a href="{{ paginate.previous.url }}">← Previous</a>
              {% endif %}

              {% for part in paginate.parts %}
                {% if part.is_link %}
                  <a href="{{ part.url }}">{{ part.title }}</a>
                {% else %}
                  {% if part.title == '&hellip;' %}
                    <span>...</span>
                  {% else %}
                    <span class="active">{{ part.title }}</span>
                  {% endif %}
                {% endif %}
              {% endfor %}

              {% if paginate.next %}
                <a href="{{ paginate.next.url }}">Next →</a>
              {% endif %}
            </div>
          {% endif %}
        {% else %}
          <div class="no-products">
            <h3>No products found</h3>
            <p>Please try adjusting your filters or browse our other collections.</p>
            <a href="/collections/all" class="btn" style="margin-top: 20px;">View All Products</a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<script>
  function sortProducts(sortValue) {
    const url = new URL(window.location);
    url.searchParams.set('sort_by', sortValue);
    window.location = url.toString();
  }
</script>