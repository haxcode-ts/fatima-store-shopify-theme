{% comment %}
  404 Error Page Template
  Save as: templates/404.liquid
{% endcomment %}

<style>
  .error-section {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 80px 0;
    background: linear-gradient(180deg, var(--color-bg-light) 0%, white 100%);
  }
  
  .error-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .error-icon {
    width: 120px;
    height: 120px;
    margin: 0 auto 30px;
    background: var(--color-bg-light);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    animation: float 3s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .error-number {
    font-size: 120px;
    font-weight: bold;
    color: var(--color-primary);
    line-height: 1;
    margin-bottom: 20px;
    font-family: var(--font-heading-family);
  }
  
  .error-title {
    font-size: 42px;
    margin-bottom: 20px;
    color: var(--color-secondary);
    font-family: var(--font-heading-family);
  }
  
  .error-message {
    font-size: 18px;
    line-height: 1.7;
    color: #666;
    margin-bottom: 15px;
  }
  
  .error-quote {
    font-size: 16px;
    font-style: italic;
    color: var(--color-primary);
    margin: 30px 0;
    padding: 20px;
    background: var(--color-bg-light);
    border-radius: 8px;
  }
  
  .error-actions {
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 40px;
  }
  
  .error-suggestions {
    margin-top: 60px;
    padding-top: 40px;
    border-top: 1px solid #e5e5e5;
  }
  
  .error-suggestions h3 {
    font-size: 24px;
    margin-bottom: 25px;
    color: var(--color-secondary);
  }
  
  .suggestions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    text-align: left;
  }
  
  .suggestion-item {
    padding: 20px;
    background: white;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    transition: all 0.3s;
  }
  
  .suggestion-item:hover {
    border-color: var(--color-primary);
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  }
  
  .suggestion-icon {
    width: 40px;
    height: 40px;
    background: var(--color-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    margin-bottom: 15px;
  }
  
  .suggestion-item h4 {
    font-size: 16px;
    margin-bottom: 8px;
    color: var(--color-secondary);
  }
  
  .suggestion-item p {
    font-size: 14px;
    color: #666;
    line-height: 1.5;
    margin: 0;
  }
  
  .suggestion-item a {
    color: var(--color-primary);
    font-weight: bold;
    display: inline-block;
    margin-top: 10px;
    transition: color 0.3s;
  }
  
  .suggestion-item a:hover {
    color: var(--color-secondary);
  }
  
  /* Search Box */
  .error-search {
    margin-top: 40px;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .error-search form {
    display: flex;
    gap: 10px;
  }
  
  .error-search input {
    flex: 1;
    padding: 15px 20px;
    border: 2px solid #ddd;
    border-radius: 4px;
    font-size: 15px;
    transition: border-color 0.3s;
  }
  
  .error-search input:focus {
    outline: none;
    border-color: var(--color-primary);
  }
  
  .error-search button {
    padding: 15px 30px;
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 15px;
    font-weight: bold;
    transition: all 0.3s;
    white-space: nowrap;
  }
  
  .error-search button:hover {
    background: #B89851;
    transform: translateY(-2px);
  }
  
  @media (max-width: 768px) {
    .error-number { font-size: 80px; }
    .error-title { font-size: 32px; }
    .error-message { font-size: 16px; }
    .error-actions { flex-direction: column; }
    .error-search form { flex-direction: column; }
    .error-search button { width: 100%; }
    .suggestions-grid { grid-template-columns: 1fr; }
  }
</style>

