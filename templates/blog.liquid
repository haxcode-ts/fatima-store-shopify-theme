{% comment %}
  Blog Template
  Save as: templates/blog.liquid
{% endcomment %}

<style>
  .blog-header { background: var(--color-secondary); color: white; padding: 80px 0; text-align: center; }
  .blog-header h1 { font-size: 48px; margin-bottom: 15px; }
  .blog-header p { font-size: 18px; opacity: 0.9; }
  
  .blog-container { padding: 80px 0; }
  .blog-layout { display: grid; grid-template-columns: 1fr 350px; gap: 60px; }
  .blog-main { min-width: 0; }
  
  .blog-featured { margin-bottom: 60px; }
  .featured-article { display: grid; grid-template-columns: 1fr 1fr; gap: 40px; background: var(--color-bg-light); border-radius: 8px; overflow: hidden; }
  .featured-image { height: 100%; }
  .featured-image img { width: 100%; height: 100%; object-fit: cover; }
  .featured-content { padding: 40px; display: flex; flex-direction: column; justify-content: center; }
  .featured-badge { display: inline-block; background: var(--color-primary); color: white; padding: 5px 15px; border-radius: 20px; font-size: 12px; font-weight: bold; margin-bottom: 15px; width: fit-content; }
  .featured-category { font-size: 13px; color: var(--color-primary); text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px; }
  .featured-title { font-size: 32px; margin-bottom: 15px; color: var(--color-secondary); }
  .featured-title a { color: inherit; transition: color 0.3s; }
  .featured-title a:hover { color: var(--color-primary); }
  .featured-excerpt { font-size: 15px; line-height: 1.7; color: #666; margin-bottom: 20px; }
  .featured-meta { display: flex; align-items: center; gap: 20px; font-size: 13px; color: #888; }
  .featured-meta svg { width: 16px; height: 16px; }
  
  .articles-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 40px; }
  .article-card { display: flex; flex-direction: column; transition: transform 0.3s; }
  .article-card:hover { transform: translateY(-5px); }
  .article-image { border-radius: 8px; overflow: hidden; margin-bottom: 20px; aspect-ratio: 16/10; }
  .article-image img { width: 100%; height: 100%; object-fit: cover; transition: transform 0.3s; }
  .article-card:hover .article-image img { transform: scale(1.05); }
  .article-category { font-size: 12px; color: var(--color-primary); text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px; }
  .article-title { font-size: 22px; margin-bottom: 12px; color: var(--color-secondary); line-height: 1.3; }
  .article-title a { color: inherit; transition: color 0.3s; }
  .article-title a:hover { color: var(--color-primary); }
  .article-excerpt { font-size: 14px; line-height: 1.6; color: #666; margin-bottom: 15px; }
  .article-meta { display: flex; align-items: center; gap: 15px; font-size: 13px; color: #888; }
  .read-more { color: var(--color-primary); font-weight: bold; font-size: 14px; margin-top: 10px; display: inline-block; }
  
  .blog-sidebar { position: sticky; top: 120px; height: fit-content; }
  .sidebar-section { background: var(--color-bg-light); padding: 30px; border-radius: 8px; margin-bottom: 30px; }
  .sidebar-title { font-size: 20px; margin-bottom: 20px; color: var(--color-secondary); }
  .categories-list { list-style: none; }
  .categories-list li { margin-bottom: 12px; }
  .categories-list a { display: flex; justify-content: space-between; align-items: center; color: #666; transition: color 0.3s; padding: 8px 0; }
  .categories-list a:hover { color: var(--color-primary); }
  .category-count { background: white; padding: 2px 10px; border-radius: 12px; font-size: 12px; }
  
  .weekly-blessing { text-align: center; }
  .blessing-text { font-size: 15px; line-height: 1.7; font-style: italic; color: #666; margin-bottom: 20px; }
  
  .subscribe-form { margin-top: 20px; }
  .subscribe-input { width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 4px; margin-bottom: 10px; font-size: 14px; }
  .subscribe-btn { width: 100%; padding: 12px; background: var(--color-primary); color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 14px; font-weight: bold; transition: background 0.3s; }
  .subscribe-btn:hover { background: #B89851; }
  .subscribe-note { font-size: 12px; color: #888; margin-top: 10px; text-align: center; }
  
  @media (max-width: 968px) {
    .blog-layout { grid-template-columns: 1fr; }
    .blog-sidebar { position: static; }
    .featured-article { grid-template-columns: 1fr; }
    .articles-grid { grid-template-columns: 1fr; }
    .blog-header h1 { font-size: 36px; }
  }
</style>

<div class="blog-header">
  <div class="container">
    <h1>Stories from the Holy Land</h1>
    <p>Faith reflections, artisan stories, and sacred inspiration from Jerusalem</p>
  </div>
</div>

<section class="blog-container">
  <div class="container">
    <div class="blog-layout">
      <div class="blog-main">
        {% if blog.articles.size > 0 %}
          {% assign first_article = blog.articles.first %}
          
          <div class="blog-featured">
            <div class="featured-article">
              <div class="featured-image">
                {% if first_article.image %}
                  <img src="{{ first_article.image | img_url: '800x600' }}" alt="{{ first_article.title }}">
                {% endif %}
              </div>
              <div class="featured-content">
                <span class="featured-badge">Featured</span>
                {% if first_article.tags.size > 0 %}
                  <div class="featured-category">{{ first_article.tags.first }}</div>
                {% endif %}
                <h2 class="featured-title">
                  <a href="{{ first_article.url }}">{{ first_article.title }}</a>
                </h2>
                <p class="featured-excerpt">{{ first_article.excerpt_or_content | strip_html | truncate: 150 }}</p>
                <div class="featured-meta">
                  <div style="display: flex; align-items: center; gap: 5px;">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"/>
                      <circle cx="12" cy="7" r="4"/>
                    </svg>
                    {{ first_article.author }}
                  </div>
                  <div style="display: flex; align-items: center; gap: 5px;">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                      <line x1="16" y1="2" x2="16" y2="6"/>
                      <line x1="8" y1="2" x2="8" y2="6"/>
                      <line x1="3" y1="10" x2="21" y2="10"/>
                    </svg>
                    {{ first_article.published_at | date: "%B %d, %Y" }}
                  </div>
                </div>
                <a href="{{ first_article.url }}" class="read-more">Read More →</a>
              </div>
            </div>
          </div>

          <div class="articles-grid">
            {% for article in blog.articles offset: 1 %}
              <article class="article-card">
                {% if article.image %}
                  <div class="article-image">
                    <img src="{{ article.image | img_url: '600x400' }}" alt="{{ article.title }}">
                  </div>
                {% endif %}
                {% if article.tags.size > 0 %}
                  <div class="article-category">{{ article.tags.first }}</div>
                {% endif %}
                <h3 class="article-title">
                  <a href="{{ article.url }}">{{ article.title }}</a>
                </h3>
                <p class="article-excerpt">{{ article.excerpt_or_content | strip_html | truncate: 120 }}</p>
                <div class="article-meta">
                  <span>{{ article.author }}</span>
                  <span>{{ article.published_at | date: "%B %d, %Y" }}</span>
                </div>
                <a href="{{ article.url }}" class="read-more">Read More →</a>
              </article>
            {% endfor %}
          </div>

          {% if paginate.pages > 1 %}
            <div class="pagination" style="margin-top: 60px;">
              {% if paginate.previous %}
                <a href="{{ paginate.previous.url }}">← Previous</a>
              {% endif %}

              {% for part in paginate.parts %}
                {% if part.is_link %}
                  <a href="{{ part.url }}">{{ part.title }}</a>
                {% else %}
                  <span class="{% if part.title == paginate.current_page %}active{% endif %}">{{ part.title }}</span>
                {% endif %}
              {% endfor %}

              {% if paginate.next %}
                <a href="{{ paginate.next.url }}">Next →</a>
              {% endif %}
            </div>
          {% endif %}
        {% else %}
          <div class="no-products">
            <h3>No articles yet</h3>
            <p>Check back soon for inspiring stories from the Holy Land.</p>
          </div>
        {% endif %}
      </div>

      <aside class="blog-sidebar">
        <div class="sidebar-section">
          <h3 class="sidebar-title">Categories</h3>
          <ul class="categories-list">
            <li><a href="/blogs/news?tag=Holy+Land+Stories"><span>Holy Land Stories</span><span class="category-count">12</span></a></li>
            <li><a href="/blogs/news?tag=Faith+Reflections"><span>Faith Reflections</span><span class="category-count">8</span></a></li>
            <li><a href="/blogs/news?tag=Sacred+Craftsmanship"><span>Sacred Craftsmanship</span><span class="category-count">6</span></a></li>
            <li><a href="/blogs/news?tag=Symbols+%26+Meanings"><span>Symbols & Meanings</span><span class="category-count">5</span></a></li>
          </ul>
        </div>

        <div class="sidebar-section weekly-blessing">
          <h3 class="sidebar-title">Weekly Blessing</h3>
          <p class="blessing-text">
            "The Lord bless you and keep you; the Lord make his face shine on you and be gracious to you."
            <br>— Numbers 6:24-25
          </p>
        </div>

        <div class="sidebar-section">
          <h3 class="sidebar-title">Subscribe</h3>
          <p style="font-size: 14px; color: #666; margin-bottom: 20px;">
            Receive weekly reflections and Holy Land stories.
          </p>
          <form class="subscribe-form">
            <input type="email" class="subscribe-input" placeholder="Your email address" required>
            <button type="submit" class="subscribe-btn">Subscribe</button>
            <p class="subscribe-note">We respect your privacy. Unsubscribe anytime.</p>
          </form>
        </div>

        <div class="sidebar-section">
          <h3 class="sidebar-title">Share Your Story</h3>
          <p style="font-size: 14px; color: #666; margin-bottom: 20px;">
            Have you been touched by the Holy Land? We'd love to hear your story.
          </p>
          <a href="/pages/contact" class="btn" style="width: 100%; text-align: center;">Contact Us</a>
        </div>
      </aside>
    </div>
  </div>
</section>