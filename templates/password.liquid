{% comment %}
  Password Protected Store Page
  Save as: templates/password.liquid
{% endcomment %}

<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ shop.name }} - Coming Soon</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, #4A3F35 0%, #2a2520 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      color: white;
    }
    .container {
      max-width: 600px;
      text-align: center;
    }
    .logo {
      width: 80px;
      height: 80px;
      background: #C9A961;
      border-radius: 50%;
      margin: 0 auto 30px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 32px;
      color: white;
      font-weight: bold;
    }
    h1 {
      font-size: 48px;
      margin-bottom: 15px;
      color: white;
    }
    .tagline {
      font-size: 18px;
      color: #C9A961;
      margin-bottom: 40px;
    }
    p {
      font-size: 16px;
      line-height: 1.6;
      opacity: 0.9;
      margin-bottom: 40px;
    }
    .password-form {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      padding: 40px;
      border-radius: 12px;
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
    .password-form h2 {
      font-size: 24px;
      margin-bottom: 20px;
    }
    .form-group {
      display: flex;
      gap: 10px;
      margin-bottom: 15px;
    }
    input[type="password"] {
      flex: 1;
      padding: 15px 20px;
      border: 1px solid rgba(255, 255, 255, 0.3);
      background: rgba(255, 255, 255, 0.1);
      border-radius: 4px;
      color: white;
      font-size: 16px;
    }
    input[type="password"]::placeholder { color: rgba(255, 255, 255, 0.5); }
    button {
      padding: 15px 35px;
      background: #C9A961;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
      font-weight: bold;
      transition: background 0.3s;
    }
    button:hover { background: #B89851; }
    .errors {
      background: rgba(255, 0, 0, 0.2);
      padding: 10px;
      border-radius: 4px;
      margin-bottom: 20px;
      font-size: 14px;
    }
    .social-links {
      margin-top: 40px;
      padding-top: 30px;
      border-top: 1px solid rgba(255, 255, 255, 0.2);
    }
    .social-links a {
      color: white;
      margin: 0 10px;
      opacity: 0.7;
      transition: opacity 0.3s;
    }
    .social-links a:hover { opacity: 1; }
    @media (max-width: 768px) {
      h1 { font-size: 36px; }
      .password-form { padding: 25px; }
      .form-group { flex-direction: column; }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="logo">F</div>
    <h1>{{ shop.name }}</h1>
    <p class="tagline">From Jerusalem, With Blessings</p>
    <p>
      We're preparing something special for you. Our store is opening soon with authentic Holy Land gifts handcrafted by Christian artisans.
    </p>
    
    <div class="password-form">
      <h2>Enter Password</h2>
      
      {% if form.errors %}
        <div class="errors">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}
      
      {% form 'storefront_password' %}
        <div class="form-group">
          <input type="password" 
                 name="password" 
                 placeholder="Enter store password"
                 autocomplete="off"
                 required>
          <button type="submit">Enter</button>
        </div>
      {% endform %}
      
      <p style="font-size: 14px; opacity: 0.7; margin-top: 20px;">
        Store owners can login from <a href="/admin" style="color: #C9A961;">here</a>
      </p>
    </div>
    
    <div class="social-links">
      <p style="margin-bottom: 15px; opacity: 0.7;">Stay Connected</p>
      {% if shop.social_media %}
        <a href="#">Facebook</a>
        <a href="#">Instagram</a>
        <a href="#">Email</a>
      {% endif %}
    </div>
  </div>
</body>
</html>